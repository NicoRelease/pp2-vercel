{
  "version": 2,
  

  "builds": [

    {
      "src": "Backend/api/index.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": "Backend/**"
      }
    },

    {
      "src": "Frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {

        "distDir": "dist" 
      }
    }
  ],
  

  "routes": [

    {
      "src": "/backend/(.*)",
      "dest": "Backend/api/index.js"
    },
    

    {
      "src": "/(.*)",
      "dest": "Frontend/dist/index.html" 

    }
  ]
}