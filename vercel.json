{
  "version": 2,
  "builds": [
    {
      "src": "Backend/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "FrontEnd/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/backend/(.*)",
      "destination": "Backend/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "FrontEnd/$1"
    },
    {
      "source": "/(.*)",
      "destination": "FrontEnd/index.html"
    }
  ]
}